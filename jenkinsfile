pipeline {
    agent any
        
    stages {
        stage('Test stage') {
            steps {
                echo "Hello world"
            }
        }
        stage('get git tag') {
            steps {
                script {
                    TAG = sh (
                        script: 'git log --tags=$PATTERN --no-walk --pretty=\'format:%d\' | grep -m 1 -o \'v[0-9]*.[0-9]*.[0-9]*\'',
                        returnStdout: true
                    ).trim()
                    echo TAG
                }
            }
        }

    }
}
