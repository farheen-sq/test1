pipeline {
    agent any
    environment {
        TAG = "*"
    }
    stages {
        stage('Test stage') {
            steps {
                echo "Hello world"
            }
        }
        stage('get git tag') {
            steps {
                script {
                    env.TAG = sh (
                        script: 'git log --tags=\'v[0-9]*.[0-9]*.[0-9]*\' --no-walk --pretty=\'format:%d\' | grep -m 1 -o \'v[0-9]*.[0-9]*.[0-9]*\'',
                        returnStdout: true
                    ).trim()
                    echo env.TAG
                }
            }
        }

    }
    post {
        success {
            script {
                build job: 'tag-based', parameters: [string(name: 'TAG_NAME', value: env.TAG)], propagate: false, wait: false
            }
        }
    }
}
